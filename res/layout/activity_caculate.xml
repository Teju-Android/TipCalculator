<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalculateActivity" >
     
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/but20Percent"
        android:text="@string/resultLabel"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/result_view"
        android:shadowColor="#DEDEDE"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#000000"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/result_view"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/amountHintLabel"
        android:inputType="numberDecimal"
        android:shadowColor="#DEDEDE"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#000000"
        android:textSize="30sp" >

        <requestFocus />
     </EditText> 

    <Button
        android:id="@+id/but10Percent"
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/but20Percent"
        android:layout_below="@+id/etAmount"
        android:background="@drawable/button_true"
        android:onClick="onClick10Percent"
        android:shadowColor="#DEDEDE"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/tenPercentLabel"
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but20Percent"
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/but10Percent"
        android:background="@drawable/button_false"
        android:onClick="onClick20Percent"
        android:shadowColor="#DEDEDE"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/twentyPercentLabel"
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/but15Percent"
        android:layout_width="145dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etAmount"
        android:layout_toRightOf="@+id/but10Percent"
        android:background="@drawable/button_false"
        android:onClick="onClick15Percent"
        android:shadowColor="#DEDEDE"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/fifteenPercentLabel"
        android:textColor="#000000"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etCustomTip"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/but20Percent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/but10Percent"
        android:layout_toRightOf="@+id/but10Percent"
        android:background="@drawable/button_false"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="text"
        android:paddingLeft="50dp"
        android:paddingTop="0dp"
        android:shadowColor="#DEDEDE"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#000000"
        android:textSize="30sp" >

    </EditText>

</RelativeLayout>
